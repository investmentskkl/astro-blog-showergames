---
import BaseLayout from "@/layouts/BaseLayout.astro";
import BlogEntries from "@/components/entries/BlogEntry.astro";
import Cta from "@/components/global/Cta.astro";
import { getCollection } from "astro:content";

const allPosts = await getCollection("posts");
const tags = [...new Set(allPosts.map((post) => post.data.tags).flat())];
const sortedPosts = allPosts.sort(
  (a, b) => new Date(b.data.pubDate) - new Date(a.data.pubDate)
);
---

<BaseLayout>
  <section>
    <div class="py-24">
      <h1
        class="text-4xl text-balance font-medium font-display text-base-900 max-w-xl"
      >
        Printable Baby Shower Games
      </h1>
      <p class="text-base text-muted-foreground mt-4 max-w-xl">
        Fun & easy games for every kind of shower. Find co-ed, classic, and large group games you can download and play today.
      </p>

      <div class="flex flex-wrap gap-3 mt-8">
        {
          tags.map((tag) => (
            <a
              class="hover:text-blue-500 text-xs font-medium text-base-600"
              href={`/tags/${tag}`}
            >
              {tag}
            </a>
          ))
        }
      </div>

      <div class="grid grid-cols-1 mt-4 gap-8 gap-y-24 sm:grid-cols-2">
        {
          sortedPosts.map((post) => (
            <BlogEntries
              url={"/posts/" + post.slug}
              alt={post.data.title}
              tags={post.data.tags}
              title={post.data.title}
              author={post.data.author}
              image={post.data.image.url}
              description={post.data.description}
              pubDate={post.data.pubDate.toString().slice(0, 10)}
            />
          ))
        }
      </div>
    </div>
  </section>

  <Cta />
</BaseLayout>
