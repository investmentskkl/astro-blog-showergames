---
import "../styles/global.css";
import { AstroSeo } from "@astrolib/seo";
---

<AstroSeo
  title="ShowerGames.co – Printable Baby Shower Games"
  description="Discover fun, printable baby shower games for every kind of celebration – co-ed, classic, and modern."
  canonical="https://showergames.co"
  openGraph={{
    url: "https://showergames.co",
    title: "ShowerGames.co – Printable Baby Shower Games",
    description: "Fun & easy games for every kind of shower. Co-ed, classic, and large group games you can download and play today.",
    images: [
      {
        url: "https://showergames.co/images/showergames-logo.jpg",
        width: 1200,
        height: 630,
        alt: "ShowerGames.co – Baby Shower Game Printables",
        type: "image/jpeg",
      },
    ],
    site_name: "ShowerGames.co",
    type: "website",
    locale: "en_US",
  }}
  twitter={{
    handle: "@showergamesco",
    site: "@showergamesco",
    cardType: "summary_large_image",
  }}
/>

<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />

<!-- Basic Meta Tags -->
<title>ShowerGames.co – Printable Baby Shower Games</title>
<meta
  name="description"
  content="Fun & easy games for every kind of baby shower. Co-ed, classic, and modern game ideas for all group sizes."
/>
<meta name="keywords" content="baby shower games, printable games, co-ed baby shower, party games, free baby shower printables" />
<meta name="author" content="ShowerGames.co" />

<!-- Favicons -->
<link rel="icon" href="/favicon.ico" sizes="any" />
<link rel="icon" href="/icon.svg" type="image/svg+xml" />
<link rel="apple-touch-icon" href="/apple-touch-icon.png" />
<link rel="manifest" href="/manifest.webmanifest" />
<link rel="shortcut icon" href="/favicon.ico" type="image/x-icon" />
<link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
<link rel="icon" type="image/png" sizes="48x48" href="/favicon-48x48.png" />

<!-- Open Graph / Facebook -->
<meta property="og:type" content="website" />
<meta property="og:url" content="https://showergames.co/" />
<meta property="og:title" content="ShowerGames.co – Printable Baby Shower Games" />
<meta property="og:description" content="Fun & easy printable games for every kind of baby shower – co-ed, classic, and large group games." />
<meta property="og:image" content="https://showergames.co/images/showergames-logo.jpg" />

<!-- Pinterest verify -->
<meta name="p:domain_verify" content="7c6764409d378c7ba1d1de574d93fb3c"/>

<!-- Twitter -->
<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:url" content="https://showergames.co/" />
<meta property="twitter:title" content="ShowerGames.co – Printable Baby Shower Games" />
<meta property="twitter:description" content="Fun & easy printable games for every kind of baby shower – co-ed, classic, and large group games." />
<meta property="twitter:image" content="https://showergames.co/images/showergames-logo.jpg" />

<!-- Canonical URL -->
<link rel="canonical" href="https://showergames.co/" />

<!-- Additional SEO -->
<meta name="robots" content="index, follow" />
<meta name="googlebot" content="index, follow" />

<!-- Apple Touch Icon -->
<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />

<!-- Theme Color -->
<meta name="theme-color" content="#ffffff" />

<!-- Compatibility -->
<meta http-equiv="X-UA-Compatible" content="IE=edge" />

<!-- Fonts & Scripts -->
<link rel="preconnect" href="https://rsms.me/" />
<link rel="stylesheet" href="https://rsms.me/inter/inter.css" />
<link
  href="https://api.fontshare.com/v2/css?f[]=jet-brains-mono@1,2&display=swap"
  rel="stylesheet"
/>
<script defer src="https://unpkg.com/alpinejs@3.x.x/dist/cdn.min.js"></script>
